generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  link           String   @unique
  image          String
  pubDate        DateTime
  contentSnippet String?
  createdAt      DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}
